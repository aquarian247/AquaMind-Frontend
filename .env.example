# AquaMind Frontend Environment Configuration

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Backend API Configuration
VITE_DJANGO_API_URL=http://localhost:8000
VITE_USE_DJANGO_API=false

# Development debugging
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# =============================================================================
# PRODUCTION SETTINGS (Copy to .env.production)
# =============================================================================

# Production Django API (Internal VLAN)
# VITE_DJANGO_API_URL=https://api-internal.aquamind.local
# VITE_USE_DJANGO_API=true

# Production settings
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error

# =============================================================================
# STAGING SETTINGS (Copy to .env.staging) 
# =============================================================================

# Staging Django API
# VITE_DJANGO_API_URL=https://api-staging.aquamind.local
# VITE_USE_DJANGO_API=true

# Staging debugging
# VITE_DEBUG_MODE=true
# VITE_LOG_LEVEL=info